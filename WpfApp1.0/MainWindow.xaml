<Window x:Class="WpfApp1._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1._0"
        mc:Ignorable="d"
        Title="Belka version 1.0" Height="600" Width="570">
    <Window.Resources>
        <local:Beam x:Key="beam" />
    </Window.Resources>
    
    <Border Padding="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left column Input Data -->
            <!-- Size concrete -->
            <StackPanel Grid.Column="0">
                <TextBlock Text="Przekrój belki" FontWeight="Bold"/>
                <ComboBox Width="200" SelectedIndex="0" ItemsSource="{Binding CrossSectionType.ListOfType, Source={StaticResource beam}}" Cursor="Arrow"/>
                <ComboBox Width="200"  >
                    <ComboBoxItem Content="{Binding CrossSectionType.ListOfType, Source={StaticResource beam}}"/>
                </ComboBox>

                <StackPanel Margin="0 2" Orientation="Horizontal">
                    <TextBlock Text="Wyskokość belki h=  " VerticalAlignment="Center"/>
                    <TextBox x:Name="properties" Padding="2" Text="{Binding CrossSectionCharacteristics.Height, Source={StaticResource beam}}"/>
                    <TextBlock Text=" cm" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Margin="0 2" Orientation="Horizontal">
                    <TextBlock Text="Szerokość belki b=  " VerticalAlignment="Center"/>
                    <TextBox Padding="2" Text="{Binding CrossSectionCharacteristics.Width, Source={StaticResource beam}}" />
                    <TextBlock Text=" cm" VerticalAlignment="Center"/>
                </StackPanel>
                
                <!-- Steel -->
                <StackPanel Margin="0 2" Orientation="Horizontal">
                    <TextBlock Text="Ilość prętów zbrojeniowych As1, n=  " VerticalAlignment="Center"/>
                    <TextBox Padding="2" Text="{Binding CrossSectionCharacteristics.CountAs1, Source={StaticResource beam}}" />
                    <TextBlock Text=" szt" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Margin="0 2" Orientation="Horizontal">
                    <TextBlock Text="Przekrój prętów As1, φ=  " VerticalAlignment="Center"/>
                    <TextBox Padding="2" Text="{Binding CrossSectionCharacteristics.FiAs1, Source={StaticResource beam}}" />
                    <TextBlock Text=" mm" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Compressed Steel -->
                <StackPanel Margin="0 2" Orientation="Horizontal">
                    <TextBlock Text="Ilość cięgien sprężających Ap, n=  " VerticalAlignment="Center"/>
                    <TextBox Padding="2" Text="{Binding CrossSectionCharacteristics.CountAp, Source={StaticResource beam}}" />
                    <TextBlock Text=" szt" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Margin="0 2" Orientation="Horizontal">
                    <TextBlock Text="Przekrój cięgien Ap, φ=  " VerticalAlignment="Center"/>
                    <TextBox Padding="2" Text="{Binding CrossSectionCharacteristics.FiAp, Source={StaticResource beam}}"/>
                    <TextBlock Text=" mm" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Static scheme / simple beam -->
                <TextBlock Text="Schemat statyczny" FontWeight="Bold"/>
                <StackPanel Margin="0 2" Orientation="Horizontal">
                    <TextBlock Text="Rozpiętość L=  " VerticalAlignment="Center"/>
                    <TextBox Padding="2" Text="{Binding StaticScheme.Length, Source={StaticResource beam}}" />
                    <TextBlock Text=" m" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Margin="0 2" Orientation="Horizontal">
                    <TextBlock Text="Obciążenie ciągłe q=  " VerticalAlignment="Center"/>
                    <TextBox Padding="2" Text="{Binding StaticScheme.ContinuosusLoad, Source={StaticResource beam}}" />
                    <TextBlock Text=" kN/m" VerticalAlignment="Center"/>
                </StackPanel>

                <Button Content="Oblicz!!!" Margin="40 10" Command="{Binding CalculateCommand, Mode=OneWay, Source={StaticResource beam}}" CommandParameter="{DynamicResource beam}" />
            </StackPanel>

            <!-- Right column Output Data -->
            <StackPanel Grid.Column="1" Margin="5,0,-5,0">
                <TextBlock Text="Wyniki" FontWeight="Bold"/>
                <StackPanel Margin="0 2" Orientation="Horizontal">
                    <TextBlock Text="Pole pow. betonu Ac=  " VerticalAlignment="Center"/>
                    <TextBox Padding="2" Text="{Binding CrossSectionCharacteristics.AreaConcrete, Mode=OneWay, Source={StaticResource beam}, StringFormat={}{0:n2}}" IsReadOnly="True"/>
                    <TextBlock Text=" cm&#x00B2;" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Margin="0 2" Orientation="Horizontal">
                    <TextBlock Text="Pole pow. stali zbrojeniowej dolnej As1=  " VerticalAlignment="Center"/>
                    <TextBox Padding="2" Text="{Binding CrossSectionCharacteristics.AreaAs1, Mode=OneWay, Source={StaticResource beam}, StringFormat={}{0:n2}}"/>
                    <TextBlock Text=" cm&#x00B2;" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Margin="0 2" Orientation="Horizontal">
                    <TextBlock Text="Pole pow. cięgien sprężających Ap=  " VerticalAlignment="Center"/>
                    <TextBox Padding="2" Text="{Binding CrossSectionCharacteristics.AreaAp, Mode=OneWay, Source={StaticResource beam}, StringFormat={}{0:n2}}"/>
                    <TextBlock Text=" cm&#x00B2;" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Margin="0 2" Orientation="Horizontal">
                    <TextBlock Text="Maksymalny moment zginający M=  " VerticalAlignment="Center"/>
                    <TextBox Padding="2" Text="{Binding StaticScheme.MaxBendingMoment, Mode=OneWay, Source={StaticResource beam}}" />
                    <TextBlock Text=" kNm" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Margin="0 2" Orientation="Horizontal">
                    <TextBlock Text="Maksymalna siła tnąca T=  " VerticalAlignment="Center"/>
                    <TextBox Padding="2" Text="{Binding StaticScheme.MaxShearForce, Mode=OneWay, Source={StaticResource beam}}"  />
                    <TextBlock Text=" kN" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Margin="0 2" Orientation="Horizontal">
                    <TextBlock Text="Przekrój  " VerticalAlignment="Center"/>
                    <TextBlock Padding="2" Text="{Binding CrossSectionType.Type, Source={StaticResource beam}}" FontWeight="Bold" />
                </StackPanel>
            </StackPanel>

        </Grid>
    </Border>    
</Window>
