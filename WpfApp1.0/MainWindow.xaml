<Window x:Class="WpfApp1._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1._0"
        mc:Ignorable="d"
        Title="Belka version 1.0" Height="350" Width="525">
    <Border Padding="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left column Input Data -->
            <StackPanel Grid.Column="0">
                <TextBlock Text="Przekrój belki" FontWeight="Bold"/>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Wyskokość belki h=  " VerticalAlignment="Center"/>
                    <TextBox x:Name="hight" Padding="2"/>
                    <TextBlock Text=" cm" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Szerokość belki b=  " VerticalAlignment="Center"/>
                    <TextBox x:Name="width" Padding="2"/>
                    <TextBlock Text=" cm" VerticalAlignment="Center"/>
                </StackPanel>

                <Button x:Name="resultBtn" Click="resultBtn_Click" Content="Oblicz!!!" Margin="40 10"/>
            </StackPanel>

            <!-- Right column Output Data -->
            <StackPanel Grid.Column="1">
                <TextBlock Text="Wyniki" FontWeight="Bold"/>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Pole przekroju belki=  " VerticalAlignment="Center"/>
                    <TextBox x:Name="field" Padding="2"/>
                    <TextBlock Text=" cm&#x00B2;" VerticalAlignment="Center"/>
                </StackPanel>
             </StackPanel>

        </Grid>
    </Border>    
</Window>
