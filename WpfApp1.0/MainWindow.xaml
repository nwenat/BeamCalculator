<Window x:Class="WpfApp1._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1._0"
        mc:Ignorable="d"
        Title="Belka version 1.0" Height="650" Width="570">

    <Window.Resources>
        <local:Beam x:Key="beam" />
    </Window.Resources>

    <Border Padding="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left column Input Data -->
            <!-- Size concrete -->
            <StackPanel Grid.Column="0">
                <Button Content="Dane materiałowe" Margin="40 10" Width="100" Command="{Binding ShowCrossSectionData, Source={StaticResource beam}}" CommandParameter="{DynamicResource beam}" />
                <TextBlock Text="Przekrój belki" FontWeight="Bold"/>
                <ComboBox Width="200" ItemsSource="{Binding CrossSectionProperties.ArrayOfType, Source={StaticResource beam}}" SelectedIndex="0" SelectedItem="{Binding CrossSectionProperties.Type, Source={StaticResource beam}}"  />
                <Image Margin="10" Width="200" Source="{Binding CrossSectionProperties.PathToDraw, Source={StaticResource beam}}"  />

                <StackPanel Margin="0 2" Orientation="Horizontal">
                    <TextBlock Text="Wyskokość belki h=  " VerticalAlignment="Center"/>
                    <TextBox Padding="2" Text="{Binding CrossSectionProperties.Height, Source={StaticResource beam}}"/>
                    <TextBlock Text=" cm" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Margin="0 2" Orientation="Horizontal">
                    <TextBlock Text="Szerokość belki b=  " VerticalAlignment="Center"/>
                    <TextBox Padding="2" Text="{Binding CrossSectionProperties.Width, Source={StaticResource beam}}" />
                    <TextBlock Text=" cm" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Margin="0 2" Orientation="Horizontal"  IsEnabled="{Binding CrossSectionProperties.IsTeowy, Mode=OneWay, Source={StaticResource beam}}">
                    <TextBlock Text="Wyskokość półki hf=  " VerticalAlignment="Center" />
                    <TextBox Padding="2" Text="{Binding CrossSectionProperties.HeightF, Source={StaticResource beam}}"/>
                    <TextBlock Text=" cm" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Margin="0 2" Orientation="Horizontal" IsEnabled="{Binding CrossSectionProperties.IsTeowy, Mode=OneWay, Source={StaticResource beam}}">
                    <TextBlock Text="Szerokość półki beff=  " VerticalAlignment="Center"/>
                    <TextBox Padding="2" Text="{Binding CrossSectionProperties.WidthEff, Source={StaticResource beam}}"/>
                    <TextBlock Text=" cm" VerticalAlignment="Center"/>
                </StackPanel>
                <TextBlock Text="Rodzaj sprężenia" FontWeight="Bold"/>
                <ComboBox Width="200" ItemsSource="{Binding CompressionType.ArrayOfTypeCompression, Source={StaticResource beam}}" SelectedIndex="0" SelectedItem="{Binding CompressionType.Compression, Source={StaticResource beam}}" />

                <!-- Steel -->
                <StackPanel Margin="0 2" Orientation="Horizontal">
                    <TextBlock Text="Przekrój prętów As1, φ=  " VerticalAlignment="Center"/>
                    <TextBox Padding="2" Text="{Binding CrossSectionProperties.FiAs1, Source={StaticResource beam}}" />
                    <TextBlock Text=" mm" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Compressed Steel -->
                <StackPanel Margin="0 2" Orientation="Horizontal">
                    <TextBlock Text="Przekrój cięgien Ap, φ=  " VerticalAlignment="Center"/>
                    <TextBox Padding="2" Text="{Binding CrossSectionProperties.FiAp, Source={StaticResource beam}}"/>
                    <TextBlock Text=" mm" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Static scheme / simple beam -->
                <TextBlock Text="Schemat statyczny" FontWeight="Bold"/>
                <StackPanel Margin="0 2" Orientation="Horizontal">
                    <TextBlock Text="Rozpiętość L=  " VerticalAlignment="Center"/>
                    <TextBox Padding="2" Text="{Binding StaticScheme.Length, Source={StaticResource beam}}" />
                    <TextBlock Text=" m" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Margin="0 2" Orientation="Horizontal">
                    <TextBlock Text="Obciążenie ciągłe q=  " VerticalAlignment="Center"/>
                    <TextBox Padding="2" Text="{Binding StaticScheme.ContinuosusLoad, Source={StaticResource beam}}" />
                    <TextBlock Text=" kN/m" VerticalAlignment="Center"/>
                </StackPanel>
                <Button Content="Oblicz" Margin="40 10" Command="{Binding CalculateCommand, Mode=OneWay, Source={StaticResource beam}}" CommandParameter="{DynamicResource beam}"/>
            </StackPanel>


            <!-- right column output data -->
            <StackPanel Grid.Column="1" Margin="5,0,-5,0">
                <TextBlock Text="wyniki" FontWeight="bold"/>
                <StackPanel Margin="0 2" Orientation="horizontal">
                    <TextBlock Text="pole pow. betonu ac=  " VerticalAlignment="center"/>
                    <TextBox Padding="2" Text="{Binding CrossSectionCalculatedCharacteristics.AreaConcrete, Mode=OneWay, Source={StaticResource beam}, StringFormat={}{0:n2}}" IsReadOnly="true"/>
                    <TextBlock Text=" cm&#x00b2;" VerticalAlignment="center"/>
                </StackPanel>
                <StackPanel Margin="0 2" Orientation="horizontal">
                    <TextBlock Text="pole pow. stali zbrojeniowej dolnej as1=  " VerticalAlignment="center"/>
                    <TextBox Padding="2" Text="{Binding CrossSectionCalculatedCharacteristics.AreaAs1, Mode=OneWay, Source={StaticResource beam}, StringFormat={}{0:n2}}" IsReadOnly="true"/>
                    <TextBlock Text=" cm&#x00b2;" VerticalAlignment="center"/>
                </StackPanel>
                <StackPanel Margin="0 2" Orientation="horizontal">
                    <TextBlock Text="pole pow. cięgien sprężających ap=  " VerticalAlignment="center"/>
                    <TextBox Padding="2" Text="{Binding CrossSectionCalculatedCharacteristics.AreaAp, Mode=OneWay, Source={StaticResource beam}, StringFormat={}{0:n2}}" IsReadOnly="true"/>
                    <TextBlock Text=" cm&#x00b2;" VerticalAlignment="center"/>
                </StackPanel>
                <StackPanel Margin="0 2" Orientation="horizontal">
                    <TextBlock Text="maksymalny moment zginający m=  " VerticalAlignment="center"/>
                    <TextBox Padding="2" Text="{Binding StaticScheme.MaxBendingMoment, Mode=OneWay, Source={StaticResource beam}, StringFormat={}{0:n2}}" IsReadOnly="true"/>
                    <TextBlock Text=" knm" VerticalAlignment="center"/>
                </StackPanel>
                <StackPanel Margin="0 2" Orientation="horizontal">
                    <TextBlock Text="maksymalna siła tnąca t=  " VerticalAlignment="center"/>
                    <TextBox Padding="2" Text="{Binding StaticScheme.MaxShearForce, Mode=OneWay, Source={StaticResource beam}, StringFormat={}{0:n2}}" IsReadOnly="true"/>
                    <TextBlock Text=" kn" VerticalAlignment="center"/>
                </StackPanel>
            </StackPanel>
           
        </Grid>
    </Border>    
</Window>
